.container {
  padding: 30rpx 30rpx 0 30rpx;
  height: 100%;
  box-sizing: border-box;
}
.card {
  padding: 30rpx;
  border-radius: 40rpx;
  position: relative;
  margin-bottom: 20rpx;
}
.school {
  font-size: 34rpx;
  font-family: 萍方-简;
  font-weight: bold;
  margin-bottom: 10rpx;
}
.alarmNum {
  font-size: 32rpx;
  font-family: 萍方-简;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
}
.alarmNum > text {
  margin-right: 12rpx;
}
.alarmTime {
  font-size: 26rpx;
  font-family: 萍方-简;
  opacity: 0.8;
}
.alarmImg {
  width: 90rpx;
  position: absolute;
  right: 30rpx;
  top: 50%;
  transform: translate3d(0, -50%, 0);
}

.alarmScroll {
  height: calc(100% - 200rpx - 20rpx);
}
.alarmItem {
  padding: 20rpx 10rpx;
  position: relative;
  border-bottom: 1px solid #E4E4EE;
}
.studentName {
  font-size: 32rpx;
  font-family: 萍方-简;
  font-weight: bold;
  color: #171719;
  margin-bottom: 14rpx;
  display: flex;
  align-items: center;
}
.studentName > text {
  margin-right: 10rpx;
}
.gradeClass {
  font-size: 28rpx;
  font-family: 萍方-简;
  color: #61666E;
}
.deviceNoWrap {
  position: absolute;
  top: 20rpx;
  right: 10rpx;
}