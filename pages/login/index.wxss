.container {
  height: 100%;
  padding-top: 100rpx;
  background: #FFFFFF;
  box-sizing: border-box;
}
.wrap {
  width: 540rpx;
  margin: 0 auto;
}
.title {
  text-align: left;
  font-size: 46rpx;
  font-family: 萍方-简;
  color: #171719;
}
.title:not(:last-child) {
  margin-bottom: 20rpx;
}
.loginBtnWrap {
  margin-top: 60rpx;
}
.loginBtn {
  width: 100%;
  font-size: 30rpx !important;
  font-family: PingFang SC;
  font-weight: bold;
  color: #FFFFFF !important;
  box-shadow: 0 10rpx 36rpx rgba(255, 128, 0, 0.2);
}
.agreementText {
  margin-top: 30rpx;
  text-align: center;
  font-size: 26rpx;
  font-family: 萍方-简;
  color: #979EAC;
}
.phoneRequester {
  width: 600rpx;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.phoneRequester > view:not(:last-child) {
  margin-bottom: 20rpx;
}
.getPhoneBtnWrap {
  width: 100%;
}
.getPhoneBtn {
  width: 100%;
  font-size: 28rpx;
  font-family: 萍方-简;
  color: #FFFFFF;
  background: #FF8000;
}
.bgCover {
  width: 100%;
  position: absolute;
  left: 0;
  bottom: 0;
}