.container {
  height: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  background: #F8F8F8;
}
.msgWrap {
  text-align: center;
  margin-bottom: 30rpx;
}
.msgTime {
  margin: 30rpx 0;
  font-size: 26rpx;
  font-family: 萍方-简;
  color: #979EAC;
}
.msgBox {
  padding: 30rpx;
  border-radius: 40rpx;
  background: #FFFFFF;
}
.msgHeader {
  padding-bottom: 30rpx;
  border-bottom: 1px solid #E4E4EE;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 26rpx;
  font-family: 萍方-简;
}
.msgHeaderLeft {
  display: flex;
  align-items: center;
}
.msgType {
  color: #171719;
  margin-left: 10rpx;
}
.msgHeaderRight {
  color: #979EAC;
}
.msgBody {
  padding-top: 30rpx;
}
.msgBodyRow1 {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.msgTitle {
  font-size: 34rpx;
  font-family: PingFang SC;
  font-weight: bold;
  color: #171719;
}
.msgBodyRow2 {
  text-align: left;
  font-size: 30rpx;
  font-family: 萍方-简;
  color: #686D78;
}
.studentName {
  color: #FF8000;
}
.noMsgWrap {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate3d(-50%, -50%, 0);
  display: flex;
  flex-direction: column;
  align-items: center;
}
.noMsgImg {
  width: 300rpx;
}